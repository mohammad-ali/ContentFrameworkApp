<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="71dp"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|right">

        <ImageView
            android:id="@+id/titleimage"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:src="@drawable/listview_tag_fav"
            android:paddingRight="0dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center|right"
            android:layout_toLeftOf="@+id/titleimage"
            android:layout_toStartOf="@+id/titleimage">

            <com.kaspian.book.TextViewPlus
                foo:customFont="fonts/sans.ttf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="تیتر اصلی هر ایتم "
                android:id="@+id/Title_of_lv_items"
                android:textSize="@dimen/small_font"
                android:singleLine="true"
                android:textColor="@color/text_dark"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toStartOf="@+id/imageView2"
                android:gravity="center|right" />

            <com.kaspian.book.TextViewPlus
                foo:customFont="fonts/sans.ttf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="تیتر اصلی هر ایتم "
                android:id="@+id/dec_of_lv_items"
                android:textSize="@dimen/very_small_font"
                android:singleLine="true"
                android:textColor="@color/text_middle"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toStartOf="@+id/imageView2"
                android:gravity="center|right" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>